<org.zarroboogs.keyboardlayout.KeyboardRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DemoMainActivity">


    <ScrollView
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:id="@+id/scrollview"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_alignParentBottom="true"
                android:text="键盘/表情"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText" />

            <Button
                android:layout_toRightOf="@+id/editText"
                android:layout_alignParentBottom="true"
                android:text="Keyboard Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/KeyBoard" />

            <EditText
                android:layout_alignParentTop="true"
                android:layout_above="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText2" />

        </RelativeLayout>

    </ScrollView>


    <org.zarroboogs.keyboardlayout.smilepicker.SmileyPicker
        android:id="@+id/smilePickerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/scrollview"
        android:layout_alignParentBottom="true" />

    <!--<ImageView
        android:layout_below="@+id/scrollview"
        android:src="@mipmap/ic_launcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/hide_imagview"
        android:layout_alignParentBottom="true" />-->
</org.zarroboogs.keyboardlayout.KeyboardRelativeLayout>